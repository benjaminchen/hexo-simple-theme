<% if (page.posts) { %>
  <%- partial('_partial/archive', {pagination: config.category, index: true}) %>
<% } else if (site.tags.length) { %>
  <div class="card my-4">
    <h5 class="card-header"><%= __('categories') %></h5>
    <div class="card-body">
      <div class="row">
        <div class="col-lg-12">
          <%- list_categories({show_count: theme.show_count}) %>
        </div>
      </div>
    </div>
  </div>
<% } %>