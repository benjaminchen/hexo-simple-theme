body {
  font-size: 1rem;
  font-weight: 400;
  line-height: 1.5;
  color: #212529;
}

.main {
  padding: 4.5rem 0 2rem 0;
  position: relative;
  min-height: 100vh - 10.35rem;

  a {
    border-bottom: 1px solid #999;
    color: var(--link-color);
    outline: 0;
    text-decoration: none;
    overflow-wrap: break-word;
    word-wrap: break-word;
    cursor: pointer;
  }
}

