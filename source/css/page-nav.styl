#page-nav
  clearfix()
  margin: 50px auto
  background: #fff
  box-shadow: 1px 2px 3px #ddd
  border: 1px solid #ddd
  border-radius: 3px
  text-align: center
  color: #999
  overflow: hidden
  a, span
    padding: 10px 20px
    line-height: 1
  a
    color: #999
    text-decoration: none
    border: none
    &:hover
      background: #999
      color: #fff
  .prev
    float: left
  .next
    float: right
  .page-number
    display: inline-block
    @media screen and (max-width: 479px)
      display: none
  .current
    color: #555
    font-weight: bold
  .space
    color: #ddd